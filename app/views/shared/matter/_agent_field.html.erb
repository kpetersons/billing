<%= fields.hidden_field :agent_id %>
<%= fields.label :agent_name %>
<%= fields.text_field :agent_name %>

<script>
	$(document).ready(function(){
		$('#document_matter_attributes_agent_name').autocomplete({
			source: '/customers/agent_find_ajax',
			minLength: 2,
			select: function( event, ui ) {
				$('#document_matter_attributes_agent_id').attr('value', ui.item.id)
			}
		});
	})
</script>
