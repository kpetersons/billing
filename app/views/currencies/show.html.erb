<div class="panel">
	<div class="panel-header">
		<strong>Currency</strong>
	</div>
	<%= render :partial => "shared/flash", :locals => {:flash => flash}%>
	<%= render :partial => "shared/error", :locals => {:obj => @currency}%>	
	<div class="panel-content">
		<%= render :partial => "form", :locals => {:contact => @currency} %>
	</div>
	<div class="nested-panel">
		<%= render :partial => "/exchange_rates/index", :locals => {:exchange_rates => @currency.exchange_rates.paginate(:page => params[:page], :per_page => 10), :table_title => "Rates", :choose => false} %>
	</div>
</div>
