<div class="panel">
	<div class="panel-header">
		<strong>Contact person information</strong>
	</div>
	<%= render :partial => "shared/flash", :locals => {:flash => flash}%>	
	<dl class="panel-content">
		<dt>
			<label>
				Identifier
			</label>
		</dt>
		<dd>
			<%=@contact_person.party.identifier%>&nbsp;
		</dd>		
		<dt>
			<label>
				First name
			</label>
		</dt>
		<dd>
			<%=@contact_person.first_name%>&nbsp;
		</dd>
		<dt>
			<label>
				Middle name
			</label>
		</dt>
		<dd>
			<%=@contact_person.middle_name%>&nbsp;
		</dd>
		<dt>
			<label>
				Last name
			</label>
		</dt>
		<dd>
			<%=@contact_person.last_name%>&nbsp;
		</dd>
		<dt>
			<label>
				Gender
			</label>
		</dt>
		<dd>
			<%=@contact_person.gender_name%>&nbsp;
		</dd>		
		<dt>
			<label>
				Birth date
			</label>
		</dt>
		<dd>
			<%=@contact_person.birth_date%>&nbsp;
		</dd>
	</dl>
	<%= render :partial => "shared/ui/show_edit_controls", :locals => {:name=> "Edit", :path => edit_customer_individual_path(@customer, @contact_person)} %>	

	<dl class="nested-panel accordion">
		<dt class="panel-header"><a href="#addresses"><strong>Addresses</strong></a></dt>
		<dd id="addresses">	
			<%= render :partial => "/addresses/index", :locals => {:addresses => @contact_person.party.addresses.paginate(:per_page=> 10, :page => params[:addresses]), :table_title => "Addresses", :choose => false, :param_name => 'addresses'} %>
			<%= render :partial => "shared/ui/show_edit_controls", :locals => {:name => 'Add new address', :path => new_party_address_path(@contact_person.party)} %>
		</dd>	
		<dt class="panel-header"><a href="#contacts"><strong>Contact list</strong></a></dt>
		<dd id="contacts">
			<%= render :partial => "/contacts/index", :locals => {:contacts => @contact_person.party.contacts.paginate(:per_page=>10, :page => params[:contacts]), :table_title => "Contacts", :choose => false, :param_name => 'contacts'} %>
			<%= render :partial => "shared/ui/show_edit_controls", :locals => {:name => 'Add new contact', :path => new_party_contact_path(@contact_person.party)} %>
		</dd>	
	</dl>	
</div>