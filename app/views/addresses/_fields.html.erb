<%= fields.hidden_field :id %>
<ul>
	<li>
		<%= fields.label :address_type_id, t("address.fields.type") %>
		<%= fields.select :address_type_id, AddressType.for_party(:party => @party).collect { |tt| [t(tt.name), tt.id] } %>
		<span style="color:#000000"><%= t('basic.or')%></span>
		<%= fields.text_field :address_type_name %>
	</li>	
	<li>
		<%= fields.label :country_id, t("address.fields.country") %>
		<%= fields.select :country_id, Country.all.collect { |c| [t(c.name), c.id] } %>		
	</li>
	<li>
		<%= fields.label :city, t("address.fields.line_1") %>
		<%= fields.text_field :city %>
	</li>	
	<li>
		<%= fields.label :street , t("address.fields.line_2") %>
		<%= fields.text_field :street %>
	</li>	
	<li>
		<%= fields.label :house_number , t("address.fields.line_3") %>
		<%= fields.text_field :house_number %>
	</li>	
	<li>
		<%= fields.label :room_number , t("address.fields.line_4")%>
		<%= fields.text_field :room_number %>
	</li>
