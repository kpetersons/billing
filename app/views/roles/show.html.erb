<div class="panel">
	<div class="panel-header">
		<strong>Role information</strong>
	</div>
	<dl class="panel-content">
		<dt>
			<label>
				Name
			</label>
		</dt>
		<dd>
			<%=@role.name%>&nbsp;
		</dd>		
		<dt>
			<label>
				Description
			</label>
		</dt>
		<dd>
			<%=@role.description%>&nbsp;
		</dd>		
	</dl>
	<div class="panel-content">
		<%=link_to 'Edit', edit_role_path(@role)%>
	</div>	
	<dl class="nested-panel accordion">
		<dt class="panel-header">
			<a href="#functions"><strong>Functions</strong></a>
		</dt>
		<dd id="functions">
			<%= render :partial => "/functions/index", :locals => {:functions => @role.functions.paginate(:page => params[:page], :per_page => 10), :choose => false, :param_name => 'function_page'} %>	 
			<div class="panel-footer">
				<%=link_to 'Add function', choose_role_functions_path(@role) %>
			</div>
		</dd>
	</dl>	
</div>