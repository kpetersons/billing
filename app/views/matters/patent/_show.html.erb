<ul class="fields-show">
	<li>
		<dl>
			<%= render :partial => "shared/matter/matter_number_show", :locals => {:matter 	=> matter}%>
		</dl>
	</li>
	<li>
		<ul>
			<li>
				<h3><%=t('header.customer_information')%></h3>
			</li>
			<li>
				<dl>
					<%= render :partial => "shared/matter/agent_show", :locals => {:matter 	=> matter}%>
					<%= render :partial => "shared/matter/applicant_show", :locals => {:matter 	=> matter}%>
				</dl>
			</li>
		</ul>
	</li>
	<li>
		<ul>
			<li>
				<h3><%=t('header.application_details')%></h3>
			</li>
			<li>
				<dl>
					<dt>
						<label><%= t('matter.patent.fields.application_date')%></label>
					</dt>
					<dd>
						<%= matter.patent.application_date.to_s(:show) unless matter.patent.application_date.nil?%>&nbsp;
					</dd>
					<dt>
						<label><%= t('matter.patent.fields.application_number')%></label>
					</dt>
					<dd>
						<%= matter.patent.application_number%>&nbsp;
					</dd>
				</dl>
			</li>
		</ul>
	</li>
	<li>
		<ul>
			<li>
				<h3><%=t('header.patent_data')%></h3>
			</li>
			<li>
				<dl>
					<dt>
						<label><%= t('matter.patent.fields.patent_number')%></label>
					</dt>
					<dd>
						<%= matter.patent.patent_number %>&nbsp;
					</dd>
					<dt>
						<label><%= t('matter.patent.fields.patent_grant_date')%></label>
					</dt>
					<dd>
						<%= matter.patent.patent_grant_date.to_s(:show) unless matter.patent.patent_grant_date.nil? %>&nbsp;
					</dd>
					<dt>
						<label><%= t('matter.patent.fields.ep_appl_number')%></label>
					</dt>
					<dd>
						<%= matter.patent.ep_appl_number %>&nbsp;
					</dd>
					<dt>
						<label><%= t('matter.patent.fields.ep_number')%></label>
					</dt>
					<dd>
						<%= matter.patent.ep_number %>&nbsp;
					</dd>
					<dt>
						<label>Registration date</label>
					</dt>
					<dd>
						<%= matter.patent.registration_date.to_s(:show) unless matter.patent.registration_date.nil?%>&nbsp;
					</dd>
				</dl>
			</li>
		</ul>
	</li>
	<li>
		<dl>
			<%= render :partial => "shared/matter/notes_show", :locals => {:matter 	=> matter}%>
		</dl>
	</li>
</ul>