<table style="width: 100%;">
	<thead>
		<tr>
			<th class="col-radio"></th>	
			<th class="col-text">Registration number</th>
			<th class="col-text">Agent</th>			
			<th class="col-text">Applicant</th>
			<th class="col-text">Notes</th>
			<th class="col-date">Status</th>			
			<th></th>
		</tr>
	</thead>
	<tfoot>
		<tr>
			<th class="list-paginate" colspan="7">
				<%= will_paginate matters, :param_name => param_name %>
			</th>
		</tr>
	</tfoot>
	<tbody>
		<% matters.each do |matter| %>
		<tr>
			<td>
				<%if choose%>
					<%= fields.radio_button :id, matter.document_id%>								
				<%end%>
			</td>
			<td class="col-text"><%= matter.number%></td>
			<td class="col-text"><%= matter.agent_name %></td>			
			<td class="col-text"><%= matter.applicant_name %></td>
			<td class="col-date"><%= matter.notes %></td>
			<td class="col-text"><%= matter.matter_status_name %></td>
			<td class="col-number"><%= link_to "Show", matter_path(matter, :anchor => :tasks)%></td>
		</tr>
		<% end %>
		<% if matters.empty? %>
		<tr>
			<td colspan="7">&nbsp;</td>
		</tr>
		<% end %>
	</tbody>
</table>