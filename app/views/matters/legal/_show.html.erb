<ul class="fields-show">
	<li>
		<dl>
			<%= render :partial => "shared/matter/matter_number_show", :locals => {:matter 	=> matter}%>
		</dl>
	</li>
	<li>
		<ul>
			<li>
				<h3><%=t('header.customer_information')%></h3>
			</li>
			<li>
				<dl>
					<%= render :partial => "shared/matter/agent_show", :locals => {:matter 	=> matter}%>
					<%= render :partial => "shared/matter/applicant_show", :locals => {:matter 	=> matter}%>
				</dl>
			</li>
		</ul>
	</li>
	<li>
		<ul>
			<li>
				<h3><%=t('header.opposite_party_details')%></h3>
			</li>
			<li>
				<dl>
					<%= render :partial => "matters/legal/opposite_party_agent_show", :locals => {:matter 	=> matter}%>					
					<%= render :partial => "matters/legal/opposite_party_show", :locals => {:matter 	=> matter}%>
				</dl>
			</li>
		</ul>
	</li>
	<li>
		<ul>
			<li>
				<h3><%=t('header.legal_data')%></h3>
			</li>
			<li>
				<dl>
					<dt>
						<label><%= t('matter.legal.fields.opposed_marks')%></label>
					</dt>
					<dd>
						<%= matter.legal.opposed_marks %>&nbsp;
					</dd>
					<dt>
						<label><%= t('matter.legal.fields.legal_type')%></label>
					</dt>
					<dd>
						<%= matter.legal.legal_type.name unless matter.legal.legal_type.nil? %>&nbsp;
					</dd>
					<dt>
						<label>Court ref</label>
					</dt>
					<dd>
						<%= matter.legal.court_ref %>&nbsp;
					</dd>
					<dt>
						<label><%= t('matter.legal.fields.instance')%></label>
					</dt>
					<dd>
						<%= matter.legal.instance %>&nbsp;
					</dd>
					<dt>
						<label><%= t('matter.legal.fields.date_of_closure')%></label>
					</dt>
					<dd>
						<%= matter.legal.date_of_closure.to_s(:show) unless matter.legal.date_of_closure.nil?%>&nbsp;
					</dd>
					<dt>
						<label>Date of order</label>
					</dt>
					<dd>
						<%= matter.legal.date_of_order.to_s(:show) unless matter.legal.date_of_order.nil?%>&nbsp;
					</dd>
				</dl>
			</li>
		</ul>
	</li>
	<li>
		<dl>
			<%= render :partial => "shared/matter/notes_show", :locals => {:matter 	=> matter}%>
		</dl>
	</li>
</ul>