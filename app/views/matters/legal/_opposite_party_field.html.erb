<%= fields.hidden_field :opposite_party_id %>
<%= fields.label :opposite_party_name, t('matter.legal.fields.opposite_party') %>
<%= fields.text_field :opposite_party_name %>
<script>
	$(document).ready(function(){
		$('#document_matter_attributes_legal_attributes_opposite_party_name').autocomplete({
			source: '/customers/applicant_find_ajax',
			minLength: 2,
			select: function( event, ui ) {
				$('#document_matter_attributes_legal_attributes_opposite_party_id').attr('value', ui.item.id)
			}
		});
	})
</script>