<html>
<head>
	<%= render :partial => "shared/head" %>
</head>
<body>
	<%= render :partial => "shared/menu" %>
	<div class="container">
		<div class="content row">
			<div class="column fixed">
				<div class="v-menu panel">
					<div class="panel-header">
						<strong>Context Menu</strong>
					</div>
					<div class="v-menu panel-content">
						<ul class="menu">
							<li>
								<%= link_to 'List invoices', invoices_path%>
							</li>
							<li>
								<%= link_to 'New invoice', new_invoice_path%>
							</li>
							<li></li>
							<li>
								<%= link_to 'Official fee types', official_fee_types_path %>
							</li>
							<li>
								<%= link_to 'Attorney fee types', attorney_fee_types_path %>
							</li>
							<li></li>
							<li>
								<%= link_to 'Presets', invoice_line_presets_path %>
							</li>
							<li></li>
							<li>
								<%= link_to 'Currencies', currencies_path %>
							</li>
						</ul>
					</div>
				</div>
				<%if @apply_filter %>				
				<div class="panel">
					<div class="panel-header">
						<strong>Search</strong>
					</div>
					<div class="panel-content">
						<%= render :partial => "shared/search/search_form" %>
					</div>
				</div>
				<%end%>
				<%if @apply_filter %>
				<div class="panel">
					<div class="panel-header">
						<strong>Column filters</strong>
					</div>
					<div class="panel-content">
						<%=form_tag :controller=> :invoices, :action => :filter do |a_f| %>
							<%= render :partial => "shared/column_filter" %>
						<%end%>
					</div>
				</div>
				<%end%>
			</div>
			<div class="column elastic">
				<div>
					<%= yield %>
				</div>
			</div>
		</div>
		<%= render :partial => "shared/footer" %>
	</div>
</body>
</html>