<table style="width: 100%;">
	<thead>
		<tr>
			<th class="col-radio"></th>
			<th class="col-text"><%=t("individual.fields.first_name")%></th>
			<th class="col-text"><%=t("individual.fields.last_name")%></th>
	  		<%= render :partial => "shared/ui/date_th"%>			
			<th class="col-number"></th>
		</tr>
	</thead>
	<tfoot>
		<tr>
			<th class="list-paginate" colspan="6">
				<%= will_paginate contact_persons, :per_page => current_user.rows_per_page, :param_name => param_name %>
			</th>
		</tr>
	</tfoot>
	<tbody>
		<% contact_persons.each do |contact_person|%>
			<tr>
				<td class="col-radio">
					<%if choose%>
						<%= fields.radio_button :target_party_id, contact_person.party_id%>						
					<%end%>
				</td>
				<td class="col-text"><%=contact_person.first_name%></td>
				<td class="col-text"><%=contact_person.last_name%></td>
	  			<%= render :partial => "shared/ui/date_td", :locals => {:object => contact_person}%>				
				<td class="col-number">
				<%=link_to t('button.show'), customer_contact_person_path(@customer, contact_person, :anchor => 'addresses') %>
				</td>
			</tr>
		<%end%>
		<% if contact_persons.empty? %>
			<tr>
				<td colspan="6">&nbsp;</td>
			</tr>
		<%end%>
	</tbody>
</table>
