<tr>
  <th class="col-text wide" colspan="6">
    Official fee
  </th>
  <th style="text-align: right">
    <%= number_to_currency(invoice.sum_official_fees, :unit => "", :delimiter  => "")%>
  </th>
</tr>
<tr>
  <th class="col-text wide" colspan="6">
    Attorney's fee
  </th>
  <th style="text-align: right">
    <%= number_to_currency(invoice.sum_attorney_fees - invoice.sum_discount , :unit => "", :delimiter  => "")%>
  </th>
</tr>
<tr>
  <th class="col-text wide" colspan="6">
    Official fee + Attorney's fee
  </th>
  <th style="text-align: right">
    <%= number_to_currency(invoice.sum_official_fees + invoice.sum_attorney_fees - invoice.sum_discount , :unit => "", :delimiter  => "")%>
  </th>
</tr>
<tr>
  <th class="col-text wide"  colspan="6">
    VAT
  </th>
  <th style="text-align: right">
    <%= number_to_currency(invoice.sum_vat, :unit => "", :delimiter  => "")%>
  </th>
</tr>
<tr>
  <th class="col-text wide" colspan="6">
    Grand total
  </th>
  <th style="text-align: right">
    <%= number_to_currency(invoice.sum_total, :unit => "", :delimiter  => "")%>
  </th>
</tr>