<table style="width: 100%;">
	<thead>
		<tr>
			<th class="col-radio"></th>	
			<th class="col-text">Name</th>
			<th class="col-text">Description</th>
			<th></th>
		</tr>
	</thead>
	<tfoot>
		<tr>
			<th class="list-paginate" colspan="4">
				<%= will_paginate functions, :page => param_name %>
			</th>
		</tr>
	</tfoot>
	<tbody>
		<% functions.each do |function| %>
		<tr>
			<td>
				<%if choose%>
					<%= fields.radio_button :function_id, function.id%>								
				<%end%>
			</td>
			<td class="col-text"><%= function.name %></td>
			<td class="col-text"><%= function.description %></td>
			<td class="col-number">
				<%= link_to "Show", function_path(function)%>
			</td>
		</tr>
		<% end %>
		<% if functions.empty? %>
		<tr>
			<td colspan="4">&nbsp;</td>
		</tr>
		<% end %>
	</tbody>
</table>