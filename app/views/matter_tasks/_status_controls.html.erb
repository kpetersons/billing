<div class="status-controls">
	<% matter_task.available_statuses.each do |status|%>
		<div class="status-control">
			<%=form_for status, :url => flow_matter_task_path(matter_task.matter, matter_task), do |f| %>
				<%=f.hidden_field :id%>				
				<%= render :partial => "shared/ui/form-submit-controls_name", :locals => {:name=>  t(status.name), :fields => f} %>				
			<%end%>
		</div>
	<%end%>
</div>