<div class="panel">
	<div class="panel-header">
		<strong>User information</strong>
	</div>
	<%= render :partial => "shared/flash", :locals => {:flash => flash}%>	
	<dl class="panel-content">
		<dt>
			<label>
				Description
			</label>
		</dt>
		<dd>
			<%=@matter_task.description%>&nbsp;
		</dd>		
		<dt>
			<label>
				Proposed deadline
			</label>
		</dt>
		<dd>
			<%=@matter_task.proposed_deadline%>&nbsp;
		</dd>
	</dl>
	<%= render :partial => "shared/ui/show_edit_controls", :locals => {:name=> "Edit", :path => edit_matter_task_path(@matter_task.matter, @matter_task)} %>
	<div style="clear:left; float:left;">	
	<%= render :partial => "/matter_tasks/states/form", :locals =>{:direction => :revert_to_step, :task => @matter_task} %>
	<%= render :partial => "/matter_tasks/states/form", :locals =>{:direction => :pass_to_step, :task => @matter_task} %>
	</div>	
</div>